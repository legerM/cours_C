#ifndef FIFO_H_
#define FIFO_H_

#include<stdio.h>
#include <stdlib.h>
#include<string.h>
#include <pthread.h>
#include<unistd.h>
#include "game_p4.h"
#include "thread.h"
#define SIZEOFMESSAGE 10

struct List liste;

struct Element {
	union {
	token_t token;
	char value[SIZEOFMESSAGE];
	} data;

	struct Element *next_p;
};

struct List {
	pthread_mutex_t mutex;
	struct Element *head;
	struct Element *tail;
};

void *thread_send(void *arg);
void *thread_pop(void *arg);
void push_element(struct List* liste, struct Element *value_to_push);
int pop_element(struct List* liste, struct Element *value_to_return);
void init_liste(struct List *liste);
#endif /* FIFO_H_ */
