#include "debug.h"
#include "game_p4.h"
#include <stdint.h>
#include <stdio.h>

int8_t matrix [TABLE_HEIGHT][TABLE_WIDTH];
int TOP=0;


void clear_matrix() {
	//matrice vide
	for (int row = 0; row < TABLE_HEIGHT; row++) {
		for (int col = 0; col < TABLE_WIDTH; col++) {
			matrix[row][col] = 0;
		}
	}
}

/* vide la matrice
 * fixer le active_player
 * initialise les couleurs associées à chaque joueur
 * */
void gp4_init(void){
	//matrice vide
	clear_matrix();
}

void diplay_matrix(int TOP, int8_t matrix[TABLE_HEIGHT][TABLE_WIDTH]) {
	debug_printf("TOP     ");
	for (int col = 0; col < TABLE_WIDTH; col++) {
		debug_printf("%d ", TOP);
	}
	debug_printf("\n");
	for (int row = 0; row < TABLE_HEIGHT; row++) {
		debug_printf("Ligne %d ", row + 1);
		for (int col = 0; col < TABLE_WIDTH; col++) {
			debug_printf("%d ", matrix[row][col]);
		}
		debug_printf("\n");
	}
}

void gp4_display(void){

	diplay_matrix();
}

